<!DOCTYPE html>
<html>
<%- include ../partials/head.ejs %>
<body class="hold-transition skin-black sidebar-mini" style="background-color: #ddd;">
	<img src="../../../img/Bridgestone Mark Logo.png" height="100" class="center-block" style="margin-top: 30px;">

	<div class="login-box well" style="margin-top: 40px;">
		<div class="login-logo">
			<a href="#"><b>Bridgestone</b> AMI</a>
		</div>
		<div class="login-box-body">
			<form id="loginForm">
				<div class="callout callout-danger text-center" hidden>
					<h5><i class="icon fa fa-exclamation-circle"></i>&nbsp;&nbsp; <span id="err-msg">Invalid email or password</span></h5>
				</div>

				<div class="form-group has-feedback">
					<input type="email" class="form-control input-sm" placeholder="Username or Email" id="email" name="username">
					<span class="glyphicon glyphicon-envelope form-control-feedback"></span>
				</div>

				<div class="form-group has-feedback">
					<input type="password" class="form-control input-sm" placeholder="Password" id="password" name="password">
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
				</div>

				<div class="row">
					<div class="col-lg-12">
						<button type="button" class="btn btn-primary btn-block btn-flat btn-sm" id="loginButton">Login</button>
					</div>
				</div>
			</form>
			<br>
			<button type="button" class="btn btn-link btn-sm" id="open-forgot-password-modal">I forgot my password</button><br>
		</div> <!-- /.box-body -->
	</div>

	<div class="modal fade" id="forgot-password-modal">
			<div class="modal-dialog modal-sm bounceInDown animated">
				<div class="modal-content">
					<div class="modal-header bg-light-blue">
						<button type="button" class="close" data-dismiss="modal">&times;</button>
						<h4 class="modal-title"><b><i class="fa fa-unlock-alt" aria-hidden="true"></i> Forgot password</b></h4>
					</div>

					<div class="modal-body">
						<div class="input-group margin">
							<input type="text" id="forgot-password-input" class="form-control input-sm" placeholder="Enter email">
							<span class="input-group-btn">
								<button type="button" class="btn btn-sm btn-success btn-flat" id="forgot-password-btn"><i class="fa fa-envelope" aria-hidden="true"></i></button>
							</span>
						</div>
					</div>
				</div>

			</div>
		</div>

	<%- include ../partials/scripts.ejs %>
	<script type="text/javascript" src="../dist/js/model.js"></script>
	<!-- <script type="text/javascript" src="../dist/js/login.js"></script> -->
	<script type="text/javascript" src="../dist/js/login.js"></script>
	<script type="text/javascript" src="../dist/js/myFunctions.js"></script>
</body>
</html>
