									</table>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-sm btn-default btn-flat" data-dismiss="modal"><i class="fa fa-close"></i> Cancel</button>
						<button type="button" class="btn btn-sm btn-primary btn-flat" id="send-invite-salesperson-btn"><i class="fa fa-check"></i> Send invite</button>
					</div>
				</div>
			</div>
		</div>

