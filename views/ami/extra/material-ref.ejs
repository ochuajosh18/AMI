<!DOCTYPE html>
<html>
<%- include ../../partials/head.ejs %>
<body class="hold-transition skin-blue sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
  <%- include ../../partials/navbar.ejs %>
  <%- include ../../partials/sidebar.ejs %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <section class="content-header">
      <h1>Material reference</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-book"></i>Master Data</a></li>
        <li><a href="/customer">Material</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-lg-12">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"><i class="fa fa-book"></i> Material reference table</h3>
              <button class="btn btn-primary pull-right btn-flat btn-sm margin-left-10" id="create-stock-doc"><i class="fa fa-file" aria-hidden="true"></i> Generate Stock Doc</button>
              <button class="btn btn-primary pull-right btn-flat btn-sm margin-left-10" id="create-storing-report-doc"><i class="fa fa-file" aria-hidden="true"></i> Generate Storing Report Doc</button>
            </div><!-- /.box-header -->

            <div class="box-body">
              <div class="row">
                <div class="col-lg-12">
                  <div id="carousel-example-generic" class="carousel slide">
                    <div class="carousel-inner">

                      <!-- First Page -->
                      <div class="item active" style="font-size: 12px;">
                        <div class="col-lg-12">
                          <table id="material-table" class="table table-responsive table-condensed table-bordered table-hover">
                            <thead>
                              <tr>
                                <th>Material Code</th>
                                <th>Size</th>
                                <th>Size Pattern</th>
                                <th>Stock</th>
                                <th>Storing Report</th>
                              </tr>
                            </thead>

                            <tbody>
                            </tbody>
                          </table>
                        </div>
                      </div>

                      <!-- Second Page -->
                      <div class="item" style="font-size: 12px;">
                      </div>

                    </div>
                  </div>
                </div>

              </div>
              <!-- /.box-body -->
            </div><!-- /.box-body -->

            <div class="overlay loading-state">
              <i class="fa fa-spinner fa-spin"></i>
            </div>
          </div><!-- /.box -->
        </div>

      </div>

      <!-- /.row -->

    </section>

  </div> <!-- /.content-wrapper -->

  <%- include ../../partials/footer.ejs %>
  <%- include ../../partials/settings.ejs %>
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>

   <!-- Modals -->
  <div class="modal fade" id="set-order-limit-modal">
    <div class="modal-dialog modal-sm">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header primary-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><i class="fa fa-wrench"></i> Set Limit</h4>
        </div>

        <div class="modal-body">
          <form class="form-horizontal" id="set-order-limit-form">
            <div class="form-group">
              <label class="control-label col-lg-3">Limit</label>
              <div class="col-lg-9">
                <input type="hidden" name="orderLimitId">
                <input type="number" class="form-control" name="limit" placeholder="Enter limit" min="0">
                <span class="help-block">Help block with error</span>
              </div>
            </div>
          </form>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">Close</button>
          <button class="btn btn-primary btn-flat" id="set-order-limit-btn"><i class="fa fa-floppy-o" aria-hidden="true"></i> Save</button>
        </div>
      </div>
      
    </div>
  </div>


   <!-- Dynamic modal -->
  <div class="modal fade" id="dynamicModal">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header text-center">
          <h4 class="modal-title"></h4>
        </div>
      </div>
    </div>
  </div>

</div> <!-- ./wrapper -->

<%- include ../../partials/scripts.ejs %>
<script type="text/javascript" src="../../../dist/js/model.js"></script>
<script type="text/javascript" src="../../../dist/js/material-ref.js"></script>
</body>
</html>