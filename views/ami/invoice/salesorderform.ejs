							<tr> <td>5</td> <td></td> <td></td> <td></td> <td></td> <td></td> </tr>
						</tbody> -->
					</table>
				</div>
			</div>

			<div class="row" style="margin-top: 30px;">
				<div class="col-xs-6">
					<table class="table">
						<tr>
							<td class="no-border-top width-30"><b>S/A No. :</b></td>
							<td class="no-border-top"><div class="bottom-line padding-left" data-invoice-info="salesOrderNo">&nbsp;</div></td>
						</tr>
						<tr>
							<td class="no-border-top width-30"><b>S/O No. :</b></td>
							<td class="no-border-top"><div class="bottom-line padding-left" data-invoice-info="salesOrderNoSAP">&nbsp;</div></td>
						</tr>
						<tr>
							<td class="no-border-top width-30"><b>Remarks :</b></td>
							<td class="no-border-top"><div class="bottom-line">&nbsp;</div></td>
						</tr>
						<tr>
							<td class="no-border-top width-30"><b></b></td>
							<td class="no-border-top"><div class="bottom-line">&nbsp;</div></td>
						</tr>
					</table>
				</div>

				<div class="col-xs-6">
					<table class="table">
						<tr>
							<td class="no-border-top width-30"><b>D/O No. :</b></td>
							<td class="no-border-top"><div class="bottom-line padding-left" data-sap-invoice-info="deliveryNo">&nbsp;</div></td>
						</tr>
						<tr>
							<td class="no-border-top width-30"><b>Invoice No. :</b></td>
							<td class="no-border-top"><div class="bottom-line padding-left" data-sap-invoice-info="invoiceNo">&nbsp;</div></td>
						</tr>
						<tr>
							<td class="no-border-top width-30"><b>Prepared by :</b></td>
							<td class="no-border-top"><div class="bottom-line" data-invoice-info="preparedBy">&nbsp;</div></td>
						</tr>
						<tr>
							<td class="no-border-top width-30"><b>Approved by :</b></td>
							<td class="no-border-top"><div class="bottom-line">&nbsp;</div></td>
						</tr>
					</table>
				</div>
			</div>
		</section>
