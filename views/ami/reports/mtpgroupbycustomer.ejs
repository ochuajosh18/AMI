<!DOCTYPE html>
<html>
<%- include ../../partials/head.ejs %>
<body class="hold-transition skin-black sidebar-mini fixed">
	<div class="wrapper">
		<%- include ../../partials/navbar.ejs %>
		<%- include ../../partials/sidebar.ejs %>
		<div class="content-wrapper">
			<section class="content-header">
				<h1><b>MTP GROUP BY CUSTOMER</b></h1>
				<ol class="breadcrumb">
					<li><a href="#"><i class="fa fa-pie-chart"></i>Reports</a></li>
					<li><a href="#">MTP Group by Customer</a></li>
				</ol>
			</section>

			<section class="content small-font">
				<div class="row">
					<div class="col-lg-12">
						<div class="box box-solid">
							<div class="box-body small-font">
								<form class="form-inline">
									<div class="form-group">
										<button type="button" class="btn btn-sm btn-default btn-flat" id="daterange-btn"> <i class="fa fa-calendar"></i> <span>Sales date range</span> <i class="caret"></i></button>
									</div>

									<div class="form-group">
										<div class="dropdown" id="material-group-dropdown">
											<button class="btn btn-sm btn-default btn-flat dropdown-toggle" type="button" data-toggle="dropdown">
											<span class="dropdown-text">Material Group</span>
											<span class="caret"></span></button>
											<ul class="dropdown-menu"></ul>
										</div>
									</div>

									<div class="form-group">
										<div class="dropdown" id="distribution-channel-dropdown">
											<button class="btn btn-sm btn-default btn-flat dropdown-toggle" type="button" data-toggle="dropdown">
											<span class="dropdown-text">Distribution Channel</span>
											<span class="caret"></span></button>
											<ul class="dropdown-menu"></ul>
										</div>
									</div>

									<div class="form-group">
										<div class="dropdown" id="salesperson-dropdown">
											<button class="btn btn-sm btn-default btn-flat dropdown-toggle" type="button" data-toggle="dropdown">
											<span class="dropdown-text">Salesperson</span>
											<span class="caret"></span></button>
											<ul class="dropdown-menu"></ul>
										</div>
									</div>
									<div class="form-group">
										<button type="button" id="btn-generate" class="btn btn-sm btn-primary btn-flat"><i class="fa fa-pie-chart" aria-hidden="true"></i> Generate Report</button>
									</div>
									<div class="form-group pull-right" id="customer-table-buttons"></div>
								</form>
								
								<table id="customer-table" class="table table-bordered table-hover table-condensed table-responsive nowrap datatable" width="100%">
									<tfoot>
										<tr>
											<th class="dt-right">Grand total : </th>
											<th></th>
											<th></th>
											<th></th>
										</tr>
									</tfoot>
								</table>
							</div>

							<div class="overlay loading-state">
								<i class="fa fa-spinner fa-spin"></i>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>

		<%- include ../../partials/footer.ejs %>
